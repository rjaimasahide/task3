<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/775239af68.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-3" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li class="nav-link">
              <%= link_to user_path(current_user.id), class: 'nav-link text-dark text-light', method: :get do %>
              <i class="fa-solid fa-house"></i>Home
              <% end %>
            </li>
            <li class="nav-link">
              <%= link_to users_path, class: 'nav-link text-dark text-light', method: :get do %>
              <i class="fa-solid fa-people-group"></i>Users
              <% end %>
            </li>
            <li class="nav-link">
              <%= link_to books_path, class: 'nav-link text-dark text-light', method: :get do %>
              <i class="fa-solid fa-book-open"></i>Books
              <% end %>
            </li>
            <li class="nav-link">
              <%= link_to destroy_user_session_path, class: 'nav-link text-dark text-light',  method: :delete do %>
              <i class="fa-solid fa-right-from-bracket"></i>Log out
              <% end %>
            </li>
            <% else %>
            <li class="nav-link">
              <%= link_to root_path, class: 'nav-link text-dark text-light', method: :get do %>
              <i class="fa-solid fa-house"></i>Home
              <% end %>
            </li>
            <li class="nav-link">
              <%= link_to about_path, class: 'nav-link text-dark text-light', method: :get do %>
              <i class="fa-solid fa-gear"></i>About
              <% end %>
            </li>
            <li class="nav-link">
              <%= link_to new_user_registration_path, class: 'nav-link text-dark text-light', method: :get do %>
              <i class="fa-solid fa-person-circle-plus"></i>Sign up
              <% end %>
            </li>
            <li class="nav-link">
              <%= link_to new_user_session_path, class: 'nav-link text-dark text-light', method: :get do %>
              <i class="fa-solid fa-right-to-bracket"></i>Sign in
              <% end %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <p >CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
