<div class="container">
  <div class="row">
    <div class="col-mx-auto">
      <div class="text-center">
        <% if @user.errors.any? %>
          <%= @user.errors.count %> error
          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        <% end %>
        <h2>User info</h2>
        <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName" %>
        </div>
        <div class="form-group">
          <label for="inputImage">ProfileImage</label>
          <%= f.file_field :profile_image, placeholder: "profile_image", accept: "image/*" %>
        </div>
        <div class="form-group">
          <label for="inputIntroduction">Introduction</label>
          <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" %>
        </div>
        <%= f.submit "Update User", class: "btn btn-secondary btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
</div>