<% if @user.errors.any? %>
  <%= @user.errors.count %> errors
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>プロフィール編集</h2>
<%= form_with model: @user do |f| %>
<div>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
</div>
<div>
  <label for="inputIntroduction">Introduction</label>
  <%= f.text_field :introduction, placeholder: "自己紹介" %>
</div>
<div>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
</div>
  <%= f.submit "変更を保存" %>
<% end %>