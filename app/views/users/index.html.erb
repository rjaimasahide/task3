<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/new', book_new: @book_new, user: current_user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table class="table table-hover">
        <tr><th>image</th><th>name</th><th></th></tr>
        <% @users.each do |user| %>
          <tr><td><%= image_tag user.get_profile_image(100,100) %></td>
          <th><%= user.name %></th>
          <th><%= link_to "Show", user_path(user.id) %></th></tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

