<div class="container">
  <div class="row">
    <div class="col-md-3">

      <% if flash[:notice] %>
        <p id="notice">
      <%= flash[:notice] %>
        </p>
      <% end %>

      <%= render 'books/new', book_new: @book_new, user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>

      <table class="table table-hover">
        <tr><th></th><th>Title</th><th>Opinion</th></tr>
        <% @books.each do |book| %>
          <tr><td>
            <%= link_to user_path(@user.id) do %>
            <%= image_tag book.user.get_profile_image(100,100) %>
            <% end %>
          </td>
          <th><%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %></th>
        <th><%= book.body %></th></tr>
        <% end %>
      </table>
    </div>
  </div>
</div>


