<h1>New book</h1>

  <%= form_with model: @book do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit '投稿' %>
  <% end %>

 <% @book_all.each do |book| %>
  <div>
    <%= link_to book_path(book.id) do %>
    <p>投稿ユーザー画像：<%= image_tag 'sample-author1.jpg' %></p>
    <% end %>
    <p>Title：<%= book.title %></p>
    <p>Opinion：<%= book.body %></p>
    <p>ユーザーネーム：<%= book.user.name %></p>
  </div>
  <% end %>
