<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <% if @book_new.errors.any? %>
        <%= @book_new.errors.count %> errors
        <ul>
          <% @book_new.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <% if flash[:notice] %>
        <p id="notice">
        <%= flash[:notice] %>
        </p>
      <% end %>
      <%= render 'new', book: @book_new %>
    </div>
    <div class="col-lg-9">
      <h1>Books</h1>
      <table class="table table-hover">
        <tr><th></th><th>Title</th><th>Opinion</th></tr>
        <% @book_all.each do |book| %>
          <tr><td><%= image_tag book.user.get_profile_image(100,100) %></td>
          <th>
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
          </th>
          <th><%= book.body %></th>
        <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>
