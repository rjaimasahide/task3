<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<%= render 'new', book: @book_new %>
<%= link_to "ユーザー情報編集", edit_user_path(current_user.id) %>

<div>
  <%= link_to book_path(@book.id) do %>
    <p>Title：<%= @book.title %></p>
  <% end %>
  <p>Opinion: <%= @book.body %></p>
  <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
  <%= link_to user_path(@book.user_id) do %>
    <p><%= @book.user.name %></p>
  <% end %>
</div>

<% if @book.user == current_user %>
  <%= link_to "編集", edit_book_path(@book) %>
  <%= link_to "削除", book_path(@book), method: :delete %>
<% end %>
