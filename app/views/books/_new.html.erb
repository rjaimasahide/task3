<h1>User inf</h1>
<%= image_tag current_user.get_profile_image(100,100) %>
<table class="table table-hover">
  <tr><th>name</th><th><%= current_user.name %></th></tr>
  <tr><th>introduction</th><th><%= current_user.introduction %></th></tr>
</table>
<%= link_to "ユーザー情報編集", edit_user_path(current_user.id), class: "btn btn-secondary" %>
<h1>New book</h1>

  <%= form_with model: book do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit '投稿' %>
  <% end %>



