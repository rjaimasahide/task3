<div class="container">
  <div class="row">
    <h1>Welcome to<i class="fas fa-book"></i>Bookers</h1>
    <div class="col-mx-auto">
      <% if flash[:notice] %>
        <p id="notice">
        <%= flash[:notice] %>
        </p>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-mx-auto h3">
      <%= link_to "Log in", new_user_session_path, class: 'btn btn-primary btn-block' %>
    </div>
  </div>
  <div class="row">
    <div class="col-mx-auto h3">
      <%= link_to "Sign up", new_user_registration_path, class: 'btn btn-success btn-block' %>
    </div>
  </div>
</div>